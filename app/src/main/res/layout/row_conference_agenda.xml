<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_shadow"
    android:padding="@dimen/big_padding">

   <TextView
       android:id="@+id/tv_day"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Day"
       android:textColor="@color/brand_color"
       android:layout_marginTop="@dimen/big_margin"
       android:layout_marginLeft="@dimen/big_margin"
       android:textAppearance="@style/LRegular"/>


    <TextView
        android:id="@+id/tv_day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/brand_color"
        android:layout_marginTop="@dimen/big_margin"
        android:textSize="35sp"
        android:layout_marginLeft="@dimen/small_margin"
        android:textAppearance="@style/LRegular"/>
    
    
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2e5894"
                android:textAppearance="@style/LRegular"
                android:text="Neurology"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aeaeae"
                android:textAppearance="@style/LRegular"
                android:text="9:00 - 10:00AM"
                android:textSize="14sp"
                android:paddingTop="@dimen/small_padding"/>


            <TextView
                android:id="@+id/tv_speaker_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aeaeae"
                android:textAppearance="@style/LRegular"
                android:text="Dr Gaurav Goel(Assoc. Director institute of Neuroscience)"
                android:textSize="14sp"
                android:paddingTop="@dimen/small_padding"/>


        </LinearLayout>

</LinearLayout>