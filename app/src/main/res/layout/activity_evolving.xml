<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar"/>

    <TextView
        android:id="@+id/tv_vr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evolving Sampada from cute child to Fatso girl"
        android:textAppearance="@style/LRegular"
        android:textColor="@color/brand_color"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="27sp"
        android:layout_margin="@dimen/small_margin"
        android:layout_centerHorizontal="true"
        />


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/evolving_sampada"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last one is my fav.\n Apko janamdin kei lakh lakh badhai ho"
        android:textAppearance="@style/LRegular"
        android:textColor="@color/brand_color"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="27sp"
        android:layout_margin="@dimen/small_margin"
        android:layout_centerHorizontal="true"
        />

</LinearLayout>